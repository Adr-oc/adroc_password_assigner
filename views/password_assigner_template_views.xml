<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_password_assigner_template_form" model="ir.ui.view">
        <field name="name">password.assigner.template.form</field>
        <field name="model">password.assigner.template</field>
        <field name="arch" type="xml">
            <form string="Plantilla de Parsing">
                <sheet>
                    <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de plantilla (ej: Formato CARTOGUA)"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General">
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="file_type"/>
                        </group>
                        <group string="Modo de Contraseña">
                            <field name="password_mode"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Columnas" name="columns">
                            <group>
                                <group string="Columnas Requeridas">
                                    <field name="column_invoice_number" placeholder="ej: FACTURA, Numero, No. Factura"/>
                                </group>
                                <group string="Columnas Opcionales">
                                    <field name="column_password" placeholder="ej: CONTRASEÑA, No. Contraseña"/>
                                    <field name="column_invoice_series" placeholder="ej: Serie, SERIE"/>
                                    <field name="column_amount" placeholder="ej: MONTO, Importe, Total"/>
                                    <field name="column_date" placeholder="ej: FECHA, Fecha Factura"/>
                                </group>
                            </group>
                        </page>
                        <page string="Opciones de Lectura" name="options">
                            <group>
                                <group string="Filas">
                                    <field name="skip_rows"/>
                                    <field name="header_row"/>
                                </group>
                                <group string="Hoja (Excel)">
                                    <field name="sheet_name" placeholder="Dejar vacío para primera hoja"/>
                                    <field name="sheet_index"/>
                                </group>
                            </group>
                        </page>
                        <page string="Descripción" name="description">
                            <field name="description" placeholder="Descripción detallada del formato de archivo..."/>
                        </page>
                        <page string="Archivo de Ejemplo" name="sample">
                            <group>
                                <field name="sample_file" filename="sample_filename"/>
                                <field name="sample_filename" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_password_assigner_template_list" model="ir.ui.view">
        <field name="name">password.assigner.template.list</field>
        <field name="model">password.assigner.template</field>
        <field name="arch" type="xml">
            <list string="Plantillas de Parsing">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="file_type"/>
                <field name="column_invoice_number"/>
                <field name="column_password"/>
                <field name="password_mode"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_password_assigner_template_search" model="ir.ui.view">
        <field name="name">password.assigner.template.search</field>
        <field name="model">password.assigner.template</field>
        <field name="arch" type="xml">
            <search string="Buscar Plantillas">
                <field name="name"/>
                <field name="description"/>
                <separator/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivados" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Excel" name="excel" domain="[('file_type', '=', 'excel')]"/>
                <filter string="CSV" name="csv" domain="[('file_type', '=', 'csv')]"/>
                <separator/>
                <filter string="Tipo de Archivo" name="group_file_type" context="{'group_by': 'file_type'}"/>
                <filter string="Modo Contraseña" name="group_password_mode" context="{'group_by': 'password_mode'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_password_assigner_template" model="ir.actions.act_window">
        <field name="name">Plantillas de Parsing</field>
        <field name="res_model">password.assigner.template</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una plantilla de parsing
            </p>
            <p>
                Las plantillas definen cómo leer archivos Excel/CSV para extraer contraseñas y números de factura.
            </p>
        </field>
    </record>

</odoo>
