<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_password_assigner_config_form" model="ir.ui.view">
        <field name="name">password.assigner.config.form</field>
        <field name="model">password.assigner.config</field>
        <field name="arch" type="xml">
            <form string="Configuración de Asignador de Contraseñas">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_test_connection"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-plug">
                            <span>Probar Conexión</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de configuración"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General">
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="OpenAI API">
                            <field name="openai_api_key" password="True"/>
                            <field name="openai_api_url"/>
                            <field name="openai_model"/>
                            <field name="timeout"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Instrucciones IA" name="instructions">
                            <field name="openai_instructions"
                                   placeholder="Instrucciones del sistema para el modelo de IA..."/>
                        </page>
                        <page string="JSON Schema" name="schema">
                            <field name="json_schema" readonly="1" widget="text"
                                   style="font-family: monospace; font-size: 12px;"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_password_assigner_config_list" model="ir.ui.view">
        <field name="name">password.assigner.config.list</field>
        <field name="model">password.assigner.config</field>
        <field name="arch" type="xml">
            <list string="Configuraciones de Asignador">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="openai_model"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_password_assigner_config_search" model="ir.ui.view">
        <field name="name">password.assigner.config.search</field>
        <field name="model">password.assigner.config</field>
        <field name="arch" type="xml">
            <search string="Buscar Configuraciones">
                <field name="name"/>
                <field name="openai_model"/>
                <separator/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivados" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Compañía" name="group_company" context="{'group_by': 'company_id'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_password_assigner_config" model="ir.actions.act_window">
        <field name="name">Configuración IA</field>
        <field name="res_model">password.assigner.config</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una configuración de IA
            </p>
            <p>
                Configure la conexión con OpenAI para procesar imágenes y PDFs de contraseñas de pago.
            </p>
        </field>
    </record>

</odoo>
