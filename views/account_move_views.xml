<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit account.move list view (Customer Invoices) to add button -->
    <record id="view_account_move_tree_inherit_password_assigner" model="ir.ui.view">
        <field name="name">account.move.list.inherit.password.assigner</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="js_class">password_assigner_list_button</attribute>
            </xpath>
        </field>
    </record>

    <!-- Also add to vendor bills view -->
    <record id="view_account_move_tree_vendor_inherit_password_assigner" model="ir.ui.view">
        <field name="name">account.move.list.vendor.inherit.password.assigner</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="js_class">password_assigner_list_button</attribute>
            </xpath>
        </field>
    </record>

</odoo>
